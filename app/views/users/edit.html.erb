<h1><%= t('page.user_profile_welcome') %></h1>

<%= form_for(@user) do |f| %>
  <%= render 'layouts/error_user_messages', :object => f.object %>
  
  <div class="div-field">
    <%= f.label :name, t('field.name') %><br />
    <%= f.text_field :name %>
  </div>
  <div class="div-field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="div-field">
    <%= f.label :password, t('field.password') %><br />
    <%= f.password_field :password %>
  </div>
  <div class="div-field">
    <%= f.label :password_confirmation, t('field.password_confirm') %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="div-field">
    <%= t('helpers.email_within') %><br />
  </div>
  <div class="div-actions">
    <%= f.submit t('buttons.save') %>
  </div>
<% end %>